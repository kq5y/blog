---
import { getEntry, type ContentEntryMap } from "astro:content";

import Article from "@/components/Article.astro";
import { SITE_NAME } from "@/const";
import Layout from "@/layouts/Layout.astro";
import { convertParams, getAllArticles } from "@/lib/article";

export async function getStaticPaths() {
  const blogs = convertParams(await getAllArticles("blog", true));
  const memos = convertParams(await getAllArticles("memo", true));
  return [...blogs, ...memos];
}

const { category, slug } = Astro.params;

const entry = await getEntry(category as keyof ContentEntryMap, slug);
if (!entry) return Astro.redirect("/404");

const renderer = await entry.render();
---

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/katex@0.16.11/dist/katex.min.css"
  integrity="sha256-cXvJrnhTth8PdkVd3fDs1PUnp4P0LeKsJGhImcHEYlg="
  crossorigin="anonymous"
  media="print"
  onload="this.media='all'"
/>

<Layout title={`${entry.data.title} - ${SITE_NAME}`}>
  <Article
    category={category}
    slug={slug}
    title={entry.data.title}
    tags={entry.data.tags}
    date={entry.data.date}
    body={entry.body}
    renderer={renderer}
  />
</Layout>
